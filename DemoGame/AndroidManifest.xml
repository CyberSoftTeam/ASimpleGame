<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.cybersoft.demo.simplegame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="vn.cybersoft.simplegame.Preferences"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vn.cybersoft.simplegame.controller.BeginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vn.cybersoft.simplegame.controller.MainActivity"
            android:label="@string/main_screen"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.cybersoft.simplegame.controller.EndActivity"
            android:label="@string/end_screen"
            android:screenOrientation="portrait" />
    </application>

</manifest>