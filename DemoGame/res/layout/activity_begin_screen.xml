<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/vn.cybersoft.demo.simplegame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_background"
    android:padding="10dp" >

    <vn.cybersoft.simplegame.view.FButton
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="@dimen/demo_button_min_height"
        android:minWidth="@dimen/demo_button_min_width"
        android:text="@string/btn_start_game"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:buttonColor="@color/fbutton_color_sun_flower"
        app:shadowEnabled="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_start_game"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/app_name"
        android:textColor="@color/text_background"
        android:textSize="40sp" />

</RelativeLayout>